
@{
    ViewBag.Title = "Create";
}

<h2>Create product</h2>
<div class="row">
    <div class="col-md-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h4>Create Product</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Erase",FormMethod.Post))
                {
                    <div class="form.group">
                        <label>Erase Title</label>
                        <input type="text" class="form-control" name="Title" />
                    </div>

                    <div class="form.group">
                        <label>Erase Price</label>
                        <input type="number" class="form-control" name="Price" />
                    </div>

                    <div class="form.group">
                        <label>Erase Quantity</label>
                        <input type="number" class="form-control" name="Quantity" />
                    </div>

                    <div class="form.group">
                        <label>Erase descr</label>
                        <input type="text" class="form-control" name="descr" />
                    </div>

                    <div class="form.group">
                        <label>Erase category</label>
                        <select class="form-control" name="cataegoryid">
                            <option value="">Select</option>
                            @foreach(var tag in ViewBag.cataegory)
                {
                    <option value="@tag.id">@tag.category</option>
                }
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info">Submit</button>
                    </div>


                }
            </div>
        </div>
    </div>
</div>

